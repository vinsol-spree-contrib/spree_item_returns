<p>
  <%= Spree.t('return_authorization_mailer.notify_return_initialization_to_admin.hi_admin') %> <br>
  <%= Spree.t('return_authorization_mailer.notify_return_initialization_to_admin.return_request') %> <br> <%= @return_authorization.order.number %>.
</p>
<table style="width: 100%;">
  <tr>
    <th><%= Spree.t('return_authorization_mailer.notify_return_initialization_to_admin.product') %></th>
    <th><%= Spree.t('return_authorization_mailer.notify_return_initialization_to_admin.quantity') %></th>
    <th><%= Spree.t('return_authorization_mailer.notify_return_initialization_to_admin.price') %></th>
  </tr>
  <% @return_authorization.return_items.each do |return_item| %>
  <tr>
    <td> <%= return_item.variant.name %> </td>
    <td class="pull-right"> 1 </td>
    <td> $ <%= return_item.variant.price.to_f %> </td>
  </tr>
  <% end %>
</table>
<br>
<p> <%= Spree.t('return_authorization_mailer.notify_return_initialization_to_admin.reason')%> <%=  @return_authorization.reason.name %> </p>
<p>
  <%= Spree.t('return_authorization_mailer.notify_return_initialization_to_admin.instructions')%>
  <%= link_to Spree.t('return_authorization_mailer.notify_return_initialization_to_admin.request'), spree.edit_admin_order_return_authorization_url(@return_authorization.order, @return_authorization) %>.
</p>
<%= Spree.t('return_authorization_mailer.notify_return_initialization_to_admin.thank_you')%>
