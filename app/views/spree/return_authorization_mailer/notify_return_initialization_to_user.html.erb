<p>
  <%= Spree.t('return_authorization_mailer.notify_return_initialization_to_user.hi')%> <%= @return_authorization.order.user.email %>, <br>
  <%= Spree.t('return_authorization_mailer.notify_return_initialization_to_user.confirmation', number: @return_authorization.order.number) %>
</p>
<br>
<table style="width: 100%;">
  <tr>
    <th><%= Spree.t('return_authorization_mailer.notify_return_initialization_to_user.product')%></th>
    <th><%= Spree.t('return_authorization_mailer.notify_return_initialization_to_user.quantity')%></th>
    <th><%= Spree.t('return_authorization_mailer.notify_return_initialization_to_user.price')%></th>
  </tr>
  <% @return_authorization.return_items.each do |return_item| %>
  <tr>
    <td> <%= return_item.variant.name %> </td>
    <td> 1 </td>
    <td> <%= number_to_currency(return_item.variant.price.to_f) %> </td>
  </tr>
  <% end %>
</table>
<br>
<p>
  <%= Spree.t('return_authorization_mailer.notify_return_initialization_to_user.information')%>
</p>
<%= Spree.t('return_authorization_mailer.notify_return_initialization_to_user.thank_you')%>